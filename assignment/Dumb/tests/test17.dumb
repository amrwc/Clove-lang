// Test anonymous functions
write("Anonymous functions:", "")


write("Dave's first challenge:")
myop = function(x, y) {
	return x + y
}
write(myop(2, 3))


write("", "", "Nested anonymous function:")
anon = function(x, y) {
	anonNested = function(a, b) {
		return a + b
	}
	
	return x + y + anonNested(3, 4)
}
write(anon(1, 2))


write("", "", "Dave's second challenge:")
myop2 = function(x, y) {
	return x(22) + y
}
write(myop2(
	function(p) {
		return p * 4
	},
	3
))


write("", "", "Beyond the challenges:")
singleNested = function(a, b, c) {
	return a() + b() + c()
}
write(singleNested(
	function() { return 222 },
	function() { return 777 },
	function() { return 2+2 }
))


withArguments = function(a, b) {
	return a(1) + b
}
write(withArguments(
	function(x) { return x + 2 },
	9
))


doubleNested = function(a, b, c) {
	return a(function() { return 44 + 55}) + b + c
}
write(doubleNested(
	function(xyz) { return xyz() + 11 },
	22,
	33
))
