// Test shorthand operators

let lorem = "lorem ipsum"
log("lorem: ", lorem)
lorem += " doloret"
log('lorem += " doloret": ', lorem) // lorem ipsum doloret
log()


let seven = 7
log("seven: ", seven)
seven -= 2
log("seven -= 2: ", seven) // 5
log()


let eight = 8
log("eight: ", eight)
eight++
log("eight++: ", eight) // 9
log()


// This could come useful for iterating through objects,
// e.g. str = "key"; obj[key + 1]; obj[key + 2]
let str = "string"
log("str: ", str)
str++
log("str++: ", str) // string1
log()


let six = 6
log("six: ", six)
six--
log("six--: ", six) // 5
log()


let t1 = 10
let t2 = 90
log("t1: ", t1, ", t2: ", t2)
t1 += t2++
log("t1 += t2++")
log("t1: ", t1, ", t2: ", t2)
log()


let b1 = 10
let b2 = 0
log("b1: ", b1, ", b2: ", b2)
b2 = b1++ + b1++
log("b2 = b1++ + b1++")
log("b2: ", b2)
log("b1: ", b1)
